  },
  "homepage": "https://github.com/alihusnain4190/be-memory#readme",
  "dependencies": {
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "knex": "^0.21.12",
    "nodemon": "^2.0.6",
    "pg": "^8.5.1",
    "underscore": "^1.11.0"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "jest-sorted": "^1.0.8",
    "supertest": "^6.0.1"
  }
